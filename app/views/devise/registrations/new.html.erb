<%= render "shared/header" %>
<%= form_with model: @user, url: user_registration_path, class: "registration", local: true do |f| %>
<%= render "devise/shared/error_messages" %>

  <div class="main-session-contents">
    <div class="form-wrap">
      <div class="form-header-text">
        会員情報入力
      </div>
    </div>
    <div class="form-group">
      <div class='form-text-wrap'>
        <label class="form-text">チーム名or学校名</label>
        <span class="indispensable">必須</span>
      </div>
      <%= f.text_field :name, class:"small-field", placeholder:"team_name" %>
    </div>
    <div class="form-group">
      <div class='form-text-wrap'>
        <label class="form-text">代表者名or監督名</label>
        <span class="indispensable">必須</span>
      </div>
      <%= f.text_field :director, class:"small-field", placeholder:"山田太郎" %>
    </div>
    <div class="form-group">
      <div class='form-text-wrap'>
        <label class="form-text">メールアドレス</label>
        <span class="indispensable">必須</span>
      </div>
      <%= f.email_field :email, class:"small-field", placeholder:"victory@com" %>
    </div>
    <div class="form-group">
      <div class='form-text-wrap'>
        <label class="form-text">パスワード</label>
        <span class="indispensable">必須</span>
      </div>
      <%= f.password_field :password, class:"small-field", placeholder:"6文字以上の半角英数字" %>
    </div>
    <div class="form-group">
      <div class='form-text-wrap'>
        <label class="form-text">パスワード（確認用）</label>
        <span class="indispensable">必須</span>
      </div>
      <%= f.password_field :password_confirmation, class:"small-field", placeholder:"同じパスワードを入力して下さい" %>
    </div>
    <div class="form-group">
      <div class='form-text-wrap'>
        <label class="form-text">属性</label>
        <span class="indispensable">必須</span>
      </div>
      <%= f.text_area :group, class:"small-field", placeholder:"name" %>
    </div>
    <div class="form-group">
      <div class='form-text-wrap'>
        <label class="form-text">電話番号</label>
        <span class="indispensable">必須</span>
      </div>
      <%= f.text_area :tell, class:"small-field", placeholder:"ハイフンはいりません" %>
    </div>
    <div class='register-btn'>
      <%= f.submit "会員登録", class:"register-send" %>
    </div>
  </div>
<% end %>
<%= render "devise/shared/links" %>
<%= render "shared/footer" %>