<%= render "shared/header" %>
<%= form_with model: @user, url: user_session_path, class:"registration", local: true do |f| %>
  <div class="main-session-contents">
    <div class="form-wrap">
      <div class="form-header-text">
        会員情報入力
      </div>
    </div>
    <div class="form-group">
      <div class='form-text-wrap'>
        <label class="form-text">メールアドレス</label>
        <span class="indispensable">必須</span>
      </div>
      <%= f.email_field :email, placeholder:"victory@com", class:"small-field" %>
    </div>
    <div class="form-group">
      <div class='form-text-wrap'>
        <label class="form-text">パスワード</label>
        <span class="indispensable">必須</span>
      </div>
      <%= f.password_field :password, placeholder:"6文字以上の半角英数字", class:"small-field" %>
    </div>
    <div class='register-btn'>
      <%= f.submit "ログイン", class:"register-send" %>
    </div>
  </div>
<% end %>

<%= render "devise/shared/links" %>
<%= render "shared/footer" %>