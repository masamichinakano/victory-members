<%= render "shared/header" %>

<%= form_with model: @member, class:"registration", local: true do |f| %>
  <div class="main-registration-contents">
    <div class="form-wrap">
      <div class="form-header-text">
        選手情報入力
      </div>
    </div>
    <div class="form-group">
      <div class='form-text-wrap'>
        <label class="form-text">名前</label>
        <span class="indispensable">必須</span>
      </div>
      <%= f.text_field :name, placeholder:"山田　太郎", class:"small-field" %>
    </div>
    <div class="form-group">
      <div class='form-text-wrap'>
        <label class="form-text">学年</label>
        <span class="indispensable">必須</span>
      </div>
      <%= f.collection_select(:school_year, SchoolYear.all, :id, :name, {}, {class:"small-field", id:"member_school_year"}) %>
    </div>
    <div class="form-group">
      <div class='form-text-wrap'>
        <label class="form-text">年齢</label>
        <span class="indispensable">必須</span>
      </div>
      <%= f.text_field :age, placeholder:"半角数字を入力してください", class:"small-field"%> 
    </div>
    <div class="form-group">
      <div class='form-text-wrap'>
        <label class="form-text">身長</label>
        <span class="indispensable">必須</span>
      </div>
      <%= f.text_field :tall, placeholder:"半角数字を入力してください", class:"small-field" %>
    </div>
    <div class="form-group">
      <div class='form-text-wrap'>
        <label class="form-text">体重</label>
        <span class="indispensable">必須</span>
      </div>
      <%= f.text_field :weight, placeholder:"半角数字を入力してください", class:"small-field" %>
    </div>
    <div class="form-group">
      <div class='form-text-wrap'>
        <label class="form-text">投球</label>
        <span class="indispensable">必須</span>
      </div>
      <%= f.collection_select(:throwing, Throwing.all, :id, :name, {}, {class:"small-field", id:"member_throwing"}) %>
    </div>
    <div class="form-group">
      <div class='form-text-wrap'>
        <label class="form-text">打席</label>
        <span class="indispensable">必須</span>
      </div>
      <%= f.collection_select(:hitting, Hitting.all, :id, :name, {}, {class:"small-field", id:"member_hitting"}) %>
    </div>
    <div class="form-group">
      <div class='form-text-wrap'>
        <label class="form-text">守備位置①</label>
        <span class="indispensable">必須</span>
      </div>
      <%= f.collection_select(:first_position, FirstPosition.all, :id, :name, {}, {class:"small-field", id:"member_first_position"}) %>
    </div>
    <div class="form-group">
      <div class='form-text-wrap'>
        <label class="form-text">守備位置②</label>
        <span class="indispensable">必須</span>
      </div>
      <%= f.collection_select(:second_position, SecondPosition.all, :id, :name, {}, {class:"small-field", id:"member_second_position"}) %>
    </div>
    <div class="form-group">
      <div class='form-text-wrap'>
        <label class="form-text">守備位置③</label>
        <span class="indispensable">必須</span>
      </div>
      <%= f.collection_select(:third_position, ThirdPosition.all, :id, :name, {}, {class:"small-field", id:"member_third_position"}) %>
    </div>
    <div class="form-group">
      <div class='form-text-wrap'>
        <label class="form-text">背番号</label>
        <span class="indispensable">必須</span>
      </div>
      <%= f.text_field :number, placeholder:"半角数字を入力してください", class:"small-field" %>
    </div>

    <div class='register-btn'>
      <%= f.submit "選手登録", class:"register-send" %>
    </div>

  </div>
<% end %>
<%= render "shared/footer" %>