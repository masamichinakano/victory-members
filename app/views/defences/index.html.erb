      <option>選手を選択してください</option>
      <% @members.each do |member| %>
        <% if member.first_position_id == 1 || member.second_position_id == 1 || member.third_position_id == 1 %>
        <%= member.name %>
        <%= f.select :pitcher_field, options_for_select(member.name) %>
